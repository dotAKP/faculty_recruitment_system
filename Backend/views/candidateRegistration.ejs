
<%- include('./homeHeader.ejs') %>
   <div id="loginbox">
        <center><h2> Candidate Registration </h2>
        <form action="">
            <input type="text" id="input" placeholder="Enter Full Name" name="name"> <br>
            <input type="email" id="input" placeholder="Enter Email" name="email"> <br>
            <input type="password" id="input" placeholder="Enter password" name="password"> <br>
            <span style="font-size: 17px;">Select Gender :</span>
            <input type="radio" id="male" value="Male" name="gender">
            <label for="male" style="font-size: 17px;">Male</label>
            <input type="radio" id="female" value="Female" name="gender">
            <label for="male" style="font-size: 17px;">Female</label>
            <input type="date" id="input" name="date"> <br>
            <input type="text" id="input" name="contact" placeholder="Enter Mobile Number" maxlength="10">
            <textarea name="address" id="input" placeholder="Enter Address" rows="3" cols="39"></textarea>
            
             <select name="qualification" id="input">
                <option value="">Select Qualification</option>
                <option value="B.COM">B.COM</option>
                <option value="B.Tech">B.Tech</option>
                <option value="BCA">BCA</option>
                <option value="BBA">BBA</option>
                <option value="MCA">MCA</option>
                <option value="M.Tech">M.Tech</option>
                <option value="PHD">PHD</option>
            </select>
            <input type="text" id="input" placeholder="Enter Percentage" name="percentage"> <br>
            <select name="experience" id="input">
                <option value="">Select Experience</option>
                <option value="Fresher">Fresher</option>
                <option value="1+ Year">1+ Year</option>
                <option value="2+ Year">2+ Year</option>
                <option value="3+ Year">3+ Year</option>
                <option value="5+ Year">5+ Year</option>
                <option value="10+ Year">10+ Year</option>
            </select>
            <br>
            <span style="font-size: 17px;">Resume :</span>
            <input type="file" id="file" name="file"> 
            <br>
         
            <input type="submit" id="inputbtn" value="Register" > <br>
            <input type="reset" id="inputbtn" value="Reset"> <br>
        </form> 
        <a id="demolink" href="/candidate/candidateLogin">Already Registered ? Login Here </a>  
    </center>
    </div>