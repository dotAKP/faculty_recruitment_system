<%- include('./adminHomeHeader.ejs') %>

<body >
    <br>
    <center>
       <h2> Candidate List </h2>
    </center>
    <table id="space" width="100%" border="1" cellspacing="0" cellpadding="10">
        <caption>
            <center> 
                <span style="font-size: 20px; color: red;"> <%= message %></span>
            </center>
            <br>
        </caption>
        <thead>
            <th> S.No </th>
            <th> Name </th>
            <th> Email </th>
            <th> Gender </th>
            <th> DOB </th>
            <th> Address </th>
            <th> Contact </th>
            <th> Qualification </th>
            <th> Percentage </th>
            <th> Experience </th>
            <th> Resume </th>
            <th> Status </th>
            <th> AdminVerify </th>
            <th> EmailVerify </th>
        </thead>
        <tbody>
            <% candidateList.forEach((candidate,index) => { %>
                <tr>
                    <td><%= index+1 %> </td>
                    <td><%= candidate.name %> </td>
                    <td><%= candidate.email_id %> </td>
                    <td><%= candidate.gender %> </td>
                    <td><%= candidate.dob %> </td>
                    <td><%= candidate.address %> </td>
                    <td><%= candidate.contact %> </td>
                    <td><%= candidate.qualification %> </td>
                    <td><%= candidate.percentage %> </td>
                    <td><%= candidate.experience %> </td>
                    <td> <a href="documents/<%= candidate.docs %>" download><%= candidate.docs %></a> </td>
                    <td><%= candidate.status %> </td>
                    <td><a href="/admin/adminVerifyCandidate?candidateEmail=<%=candidate.email_id%>"><%=candidate.adminVerify%></a> </td>
                    <td><%= candidate.emailVerify %> </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>